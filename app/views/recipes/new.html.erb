<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :ingredients %>
  <%= select_tag "ingredients_to_add", options_from_collection_for_select(Ingredient.all, 'id', 'title', @recipe.ingredients.map{ |j| j.id }), :multiple => true %>
  <br>
  <%= f.label :method %>
  <%= f.text_field :method %>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <%= f.label :category_id %>
    <% options = options_from_collection_for_select(@category, 'id', 'title') %>
    <%= f.select :category_id, options %>
  <br>
  <%= f.submit 'Create Recipe' %>
<% end %>